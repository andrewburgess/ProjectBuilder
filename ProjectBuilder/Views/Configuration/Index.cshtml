@model ProjectBuilder.ViewModels.Configuration.IndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Javascript {
    <script type='text/javascript'>
        var nodes = @Html.Raw(Json.Encode(Model.Nodes));
    </script>
    <script type='text/javascript' src='@Url.Content("~/Scripts/configuration/view-model.js")'></script>
}

@section Hero {
<h1>Configuration</h1>
<p>
    Set up the project builder and get all the pieces working nicely
</p>
}

<div id='node-list' data-save-url='@Url.Action("Save", "Node")' data-delete-url="@Url.Action("Delete", "Node")">
    <div>
        <button id='add-node' class='btn btn-primary' data-bind='click: addNode'>Add Node</button>
    </div>

    <ul data-bind='template: {name: "node-template", foreach: nodes}'>
        
    </ul>
</div>

<div id='modal-node-dialog' class='modal fade' data-bind='modal: modalNode'>
    <div class='modal-header'>
        <button class='close' data-dismiss='modal'>&times;</button>
        <h3>Node Form</h3>
    </div>
    <div class='modal-body'>
        <form id='node-form' class='form-horizontal'>
            <div class='control-group' data-bind='validationElement: Name'>
                <label class='control-label' for='node-name'>Name:</label>
                <div class='controls'>
                    <input type='text' id='node-name' placeholder='Name of node' data-bind='value: Name' />
                </div>
            </div>
            <div class='control-group'>
                <label class='control-label' for='node-description'>Description:</label>
                <div class='controls'>
                    <textarea id='node-description' placeholder='Description of node' data-bind='value: Description'>
                    </textarea>
                </div>
            </div>
        </form>
    </div>
    <div class='modal-footer'>
        <button class='btn btn-primary' data-bind='click: $root.saveNode'>Save</button>
        <button class='btn' data-dismiss='modal'>Cancel</button>
    </div>
</div>

<script type='text/html' id='node-template' class='hide'>
    <li data-bind='drag: {containment: "#content"},
                   drop: {drop: function (evt, ui) { $root.updateParent(evt, ui, this) }}'>
        <div class='pull-right'>
            <a href='#' class='remove pull-right'><i class='icon icon-remove'></i></a>
        </div>
        <div>
            <div class='drag-handle pull-left'><i class='icon-move'></i></div>
            <div data-bind='text: Name, click: $root.editNode' class='pull-left'></div>
            <button class='btn btn-mini' data-bind='click: $root.addChild'><i class='icon-plus-sign'></i> Add Child</button>
        </div>
        <ul data-bind='template: { name: "node-template", foreach: Children }'></ul>
    </li>
</script>